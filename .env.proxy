# OpenAI Proxy Environment Configuration

# Application Settings
APP_NAME=OpenAI Proxy
APP_VERSION=1.0.0
APP_DEBUG=false
APP_HOST=0.0.0.0
APP_PORT=8000

# Database Settings
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/openai_proxy
DATABASE_ECHO=false
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_RECYCLE=3600

# Redis Settings
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# S3 Settings (for MinIO)
S3_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=openai-proxy
S3_REGION=us-east-1
S3_USE_SSL=false

# Security Settings
SECRET_KEY=your-secret-key-change-in-production-please-use-strong-key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
ENCRYPTION_KEY=your-encryption-key-32-chars-long!!

# Proxy Settings
PROXY_DEFAULT_TIMEOUT=30
PROXY_MAX_RETRIES=3
PROXY_ENABLE_STREAMING=true
PROXY_ENABLE_CONTENT_LOGGING=false
PROXY_CONTENT_RETENTION_DAYS=30
PROXY_MAX_FALLBACK_ATTEMPTS=3
PROXY_CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
PROXY_CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60

# Rate Limiting Settings
RATE_LIMIT_GLOBAL_RPM=1000
RATE_LIMIT_GLOBAL_TPM=100000
RATE_LIMIT_PER_KEY_RPM=100
RATE_LIMIT_PER_KEY_TPM=10000
RATE_LIMIT_PER_IP_RPM=60
RATE_LIMIT_WINDOW_SIZE_MINUTES=1

# Monitoring Settings
MONITORING_ENABLE_METRICS=true
MONITORING_METRICS_PORT=8001
MONITORING_ENABLE_TRACING=false
LOG_LEVEL=INFO
LOG_FORMAT=json

# CORS Settings
CORS_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]